---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Para jugar y eso">
  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
      font-family: sans-serif;
    }

    spline-viewer {
      width: 100vw;
      height: 100vh;
      display: block;
      position: relative;
      z-index: 1;
    }

    .overlay {
      position: absolute;
      top: 45%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 5.5rem;
      font-weight: bold;
      background: linear-gradient(90deg, #ff00cc, #3333ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      color: transparent;
      z-index: 10;
      text-align: center;
      pointer-events: none;
    }

    .btn-lindo {
      position: absolute;
      top: 60%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 0.75rem 2rem;
      font-size: 2rem;
      font-weight: bold;
      color: white;
      background: linear-gradient(135deg, #7b2ff7, #f107a3);
      border: none;
      border-radius: 0.5rem;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
      transition: all 0.3s ease;
      cursor: pointer;
      z-index: 10;
    }

    .btn-lindo:hover {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2.5px solid #7b2ff7;
    }
  </style>

  <div style="position: relative; width: 100vw; height: 100vh;">
    <spline-viewer
      url="https://my.spline.design/100followers-JUanmwSZ7N1NxFP1oOkKR074/"
      loading="eager"
      style="position: absolute; top: 0; left: 0;"
    ></spline-viewer>

    <div class="overlay">PARA JUGAR Y ESO</div>
    <button class="btn-lindo">Ãšnete</button>
  </div>

  <script type="module" src="https://unpkg.com/@splinetool/viewer/build/spline-viewer.js"></script>
</Layout>