---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Para jugar y eso">
  <style>
    html,
    body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
      font-family: sans-serif;
    }

    #canvas3d {
      width: 100vw;
      height: 100vh;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;
    }

    .overlay {
      position: absolute;
      top: 45%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 5.5rem;
      font-weight: bold;
      background: linear-gradient(90deg, #ff00cc, #3333ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      color: transparent;
      z-index: 10;
      text-align: center;
      pointer-events: none;
    }

    .btn-lindo {
      position: absolute;
      top: 60%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 0.75rem 2rem;
      font-size: 2rem;
      font-weight: bold;
      color: white;
      background: linear-gradient(135deg, #7b2ff7, #f107a3);
      border: none;
      border-radius: 0.5rem;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
      transition: all 0.3s ease;
      cursor: pointer;
      z-index: 10;
    }

    .btn-lindo:hover {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2.5px solid #7b2ff7;
    }
  </style>

  <canvas id="canvas3d"></canvas>

  <div class="overlay">PARA JUGAR Y ESO</div>
