import Layout from "../layouts/Layout.astro";
---

<Layout title="Para jugar y eso">
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: sans-serif;
      z-index: 1;
    }

    .spline-wrapper {
      position: relative;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      pointer-events: none; /* ðŸ”’ Evita interacciÃ³n (no se puede rotar) */
    }

    .overlay {
      position: absolute;
      top: 45%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 5.5rem;
      font-weight: bold;
      background: linear-gradient(90deg, #ff00cc, #3333ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      color: transparent;
      z-index: 10;
      text-align: center;
      pointer-events: none;
    }

    .btn-lindo {
      position: absolute;
      top: 60%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 0.75rem 2rem;
      font-size: 2rem;
      font-weight: bold;
      color: white;
      background: linear-gradient(135deg, #7b2ff7, #f107a3);
      border: none;
      border-radius: 0.5rem;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
      transition: all 0.3s ease;
      cursor: pointer;
      z-index: 10;
    }

    .btn-lindo:hover {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2.5px solid #7b2ff7;
      color: white;
    }
  </style>

